<h1>Editing Book</h1>

<%= form_with model: @book, url: update_path(@book.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

<div class="box">>
  <%= f.submit 'Update Book' %>
</div
<% end %>

<span class="edit-blank">
   <%= link_to 'Show', book_path(@book.id) %>
  </span>
<span>|</span>
<span>
  <%= link_to 'Back', "/books" %>
</span>