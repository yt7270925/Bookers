<h1>Editing Book</h1>

<!-- validation -->
<% if @book.errors.any? %>
 <div><%= @book.errors.count %>error prohibited this book from being saved:</div>
 <% @book.errors.full_messages.each do |message| %>
  <div><%= message %></div>
 <% end %>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <h4 class="edit-box">Title</h4>
  <%= f.text_field :title %>

  <h4 class="edit-box">Body</h4>
  <%= f.text_area :body %>

<div class="box">
  <%= f.submit 'Update Book' %>
</div
<% end %>

<span class="edit-blank">
   <%= link_to 'Show', book_path(@book.id) %>
  </span>
<span>|</span>
<span>
  <%= link_to 'Back', "/books" %>
</span>