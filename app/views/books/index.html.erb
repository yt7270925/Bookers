<h1>Books</h1>

<% @books.each do |book| %>

 <div class="book">
  <p>Title</p>
  <span><%= book.title %></span>

  <p>Body</p>
  <span><%= book.body %></span>

  <span>
   <%= link_to 'Show', show_path(book.id) %>
  </span>
  <span>
   <%= link_to 'Edit', edit_path(book.id) %>
  </span>
  <span>
   <%= link_to 'Destroy', "destoroy" %>
  </span>
  </div>
<% end %>

<h2>New Book</h2>
<%= form_with model: @book, url: 'books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

 <div class="box">
  <%= f.submit 'Create Book' %>
 </box>
<% end %>